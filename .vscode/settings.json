{
  "[gdscript]": {
    "editor.defaultFormatter": "EddieDover.gdscript-formatter-linter",
    "editor.insertSpaces": false,
    "editor.tabSize": 4,
    "editor.detectIndentation": false
  },
  "files.associations": {
    "gdlintrc": "yaml"
  },
  "cSpell.words": ["elif", "onready", "spawnables", "teleporter", "tscn"],
  "cSpell.enableFiletypes": ["gdscript"],
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.godot": true
  }
}
